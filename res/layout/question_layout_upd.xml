<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/frameLayout_bg_upd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_dialog_bg" >

        <TextView
            android:id="@+id/textView_question_text_upd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="70dp"
            android:text="TextView"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/imageView_card_upd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:adjustViewBounds="true"
            android:maxWidth="100dp"
            android:paddingTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/action_joker" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="25dp" >

            <Button
                android:id="@+id/button_online_upd"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:background="@drawable/button_online"
                android:minHeight="40dip"
                android:paddingRight="2dp" />

            <Button
                android:id="@+id/button_rotate_upd"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="@drawable/blue_button_rotate"
                android:minHeight="40dip"
                android:paddingLeft="2dp" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>
