<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c40d0f" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingBottom="1dp"
            android:paddingTop="1dp" >

            <TextView
                android:id="@+id/textView_steps"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#c40d0f"
                android:gravity="center"
                android:paddingBottom="1dp"
                android:paddingTop="1dp"
                android:text="@string/rules_steps"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:typeface="serif" />

        </FrameLayout>

        <TextView
            android:id="@+id/textView_steps_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/rules_steps_text"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:typeface="serif" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingBottom="1dp"
            android:paddingTop="1dp" >

            <TextView
                android:id="@+id/textView_types"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#c40d0f"
                android:gravity="center"
                android:text="@string/rules_types"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:typeface="serif" />

        </FrameLayout>

        <TextView
            android:id="@+id/textView_types_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/rules_steps_text"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:typeface="serif" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingBottom="1dp"
            android:paddingTop="1dp" >

            <TextView
                android:id="@+id/textView_chips"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#c40d0f"
                android:gravity="center"
                android:text="@string/rules_chips"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:typeface="serif" />

        </FrameLayout>

        <TextView
            android:id="@+id/textView_chips_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/rules_chips_text"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:typeface="serif" />

    </LinearLayout>

</ScrollView>