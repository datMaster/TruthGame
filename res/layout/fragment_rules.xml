<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red_background" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/frameLayout1"
        android:layout_marginBottom="60dp" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#c40d0f" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="477dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:paddingBottom="1dp"
                    android:paddingTop="1dp" >

                    <TextView
                        android:id="@+id/textView_steps"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#c40d0f"
                        android:gravity="center"
                        android:paddingBottom="1dp"
                        android:paddingTop="1dp"
                        android:text="@string/rules_steps"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:typeface="serif" />
                </FrameLayout>

                <TextView
                    android:id="@+id/textView_steps_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/rules_steps_text"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:typeface="serif" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:paddingBottom="1dp"
                    android:paddingTop="1dp" >

                    <TextView
                        android:id="@+id/textView_types"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#c40d0f"
                        android:gravity="center"
                        android:text="@string/rules_types"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:typeface="serif" />
                </FrameLayout>

                <TextView
                    android:id="@+id/textView_types_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/rules_steps_text"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:typeface="serif" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:paddingBottom="1dp"
                    android:paddingTop="1dp" >

                    <TextView
                        android:id="@+id/textView_chips"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#c40d0f"
                        android:gravity="center"
                        android:text="@string/rules_chips"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:typeface="serif" />
                </FrameLayout>

                <TextView
                    android:id="@+id/textView_chips_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/rules_chips_text"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:typeface="serif" />
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <Button
            android:id="@+id/button_rate"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/rate_button" />

        <RatingBar
            android:id="@+id/ratingBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="1"
            android:rating="1" />

    </FrameLayout>

</RelativeLayout>